# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,js,html}]
indent_style = space

[*.js]
max_line_length = 120

[*.rst]
max_line_length = 80

[djangocms_text_ckeditor/templates/cms/plugins/render_plugin_preview.html]
insert_final_newline = false
